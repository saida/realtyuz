#change-password
  - form_tag url_for(:action => "update", :id => params[:id]) do
    Old Password:
    %br/
    = password_field_tag 'old_password', @old_password, :size => 45
    Password:
    %br/
    = password_field_tag :password 
    %br/
    Confirm Password:
    %br/
    = password_field_tag :password_confirmation
    %br/
    = submit_tag "Reset Your Password"
