- if logged_in?
	.account-bar-greeting
		Logged in as
		= link_to_current_account :content_method => :login
	.account-bar-action= link_to "Log out", logout_path, { :title => "Log out" }
- else
	.account-bar-greeting= link_to_login_with_IP 'Not logged in', :style => 'border: none;'
	.account-bar-action
		= link_to "Log in",	 login_path,	{ :title => "Log in" }
		= link_to "Sign up", signup_path, { :title => "Create an account" }
